# start dmenu (a program launcher)
for_window [app_id="top"] floating enable, move absolute position 0px 0px
bindsym $mod+d exec  --no-startup-id j4-dmenu-desktop --display-binary --dmenu="t4 -n --name="top""

for_window [app_id="top-left-list"] floating enable, move absolute position 0px 0px
for_window [app_id="bottom_left_list"] floating enable, move absolute position 0px 1056px
for_window [app_id="top-rigth-list"]  floating enable, move absolute position 1620px 0px
for_window [app_id="bottom-rigth-list"] floating enable, move absolute position 1620px 1056px
for_window [app_id="top-middle"] floating enable, move absolute position 810px 0px
for_window [app_id="bottom"] floating enable, move absolute position 0px 1056px

set $t4 Menu (1)TopLeftList (3)TopRigthList (4)TopMiddle (5)Bottom
mode "$t4" {
    bindsym 1 exec j4-dmenu-desktop --display-binary --dmenu="t4 -n -x 0 -y 0 -W 300 -l 20 --name="top-left-list"" ,mode "default"
    bindsym 3 exec j4-dmenu-desktop --display-binary --dmenu="t4 -n  -W 300 -l 20 --name="top-rigth-list"" ,mode "default"
    bindsym 4 exec j4-dmenu-desktop --display-binary --dmenu="t4 -n  -W 300 -l 20 --name="top-middle"" ,mode "default"
    bindsym 5 exec j4-dmenu-desktop --display-binary --dmenu="t4 -n --name="bottom"" ,mode "default"

    bindsym Escape mode "default"
}
bindsym $mod+t mode "$t4"
